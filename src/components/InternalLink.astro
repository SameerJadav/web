---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  highlight?: boolean;
  underline?: boolean;
  className?: string;
}

const { highlight, underline, className, ...props } = Astro.props;
---

<a
  class:list={[
    "inline-flex items-center gap-2 font-medium transition-colors ease-out focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-gray-7",
    { "hover:text-blue-10": highlight },
    {
      "underline decoration-gray-7 underline-offset-2  hover:decoration-gray-8":
        underline,
    },
    className,
  ]}
  {...props}
>
  <slot />
</a>
